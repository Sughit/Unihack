datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        Int      @id @default(autoincrement())
  chatName  String
  text      String
  createdAt DateTime @default(now())
}

enum UserRole {
  BUYER
  ARTIST
}

model User {
  id        Int       @id @default(autoincrement())
  auth0Id   String    @unique         // sub de la Auth0
  email     String?   @unique
  name      String?                   // numele de la Auth0
  username  String?                   // completat de utilizator
  role      UserRole?                 // BUYER sau ARTIST
  country   String?                   // È›ara de origine
  domain    String?                   // doar pt ARTIST
  languages String?                   // ex: "ro,en"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts      Post[]
  likes      PostLike[]
  followers  Follow[] @relation("following")
  following  Follow[] @relation("followers")
}

model Post {
  id        Int       @id @default(autoincrement())
  author    User      @relation(fields: [authorId], references: [id])
  authorId  Int
  title     String
  content   String
  createdAt DateTime  @default(now())

  likes     PostLike[]
}

model PostLike {
  id      Int   @id @default(autoincrement())
  post    Post  @relation(fields: [postId], references: [id])
  postId  Int
  user    User  @relation(fields: [userId], references: [id])
  userId  Int

  @@unique([postId, userId])
}

model Follow {
  id           Int   @id @default(autoincrement())
  follower     User  @relation("followers", fields: [followerId], references: [id])
  followerId   Int
  following    User  @relation("following", fields: [followingId], references: [id])
  followingId  Int

  @@unique([followerId, followingId])
}
