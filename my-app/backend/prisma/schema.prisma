datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        Int      @id @default(autoincrement())
  chatName  String
  text      String
  createdAt DateTime @default(now())
}

enum UserRole {
  BUYER
  ARTIST
}

model User {
  id        Int       @id @default(autoincrement())
  auth0Id   String?   @unique         // sub de la Auth0
  email     String    @unique
  name      String?                   // numele de la Auth0
  username  String?                   // completat de utilizator
  role      UserRole?                 // BUYER sau ARTIST
  country   String?                   // È›ara de origine
  domain    String?                   // doar pt ARTIST
  languages String?                   // ex: "ro,en"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}